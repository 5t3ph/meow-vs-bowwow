<ul>
  <li>
    <strong>Author</strong>: {{ author }}
  </li>
  <ul>
    {% for key, value in stack %}
      <li>
        {% if loop.last or key === 'stack' or key === 'techStack' %}
          <strong>{{ key }}:</strong>
          <ul>
            {% for layer, technologies in stack[key] %}
              <li>
                <strong>{{ layer }}:</strong>
                {{ technologies | join(", ") }}
              </li>
            {% endfor %}
          </ul>
        {% else %}
          <strong>{{ key }}:</strong>
          {{ value }}
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</ul>

{% if pagination.href.previous %}
<a href="{{pagination.href.previous}}">Previous</a>
{% endif %}
{% if pagination.href.next %}
<a href="{{pagination.href.next}}">Next</a>
{% endif %}

